---
interface Props {

}

---

<nav class="bg-white dark:bg-gray-900 fixed w-full z-20 top-0 start-0 border-b border-gray-200 dark:border-gray-600">
	<div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">

		<!-- left side of header -->
		<a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
			<!-- shown on larger screens, hidden on small screens -->
			<span class="hidden md:block self-center text-3xl font-thin whitespace-nowrap dark:text-white">
				JOHN DUNCAN FERGUSON</span>
			<!-- shown on small screens, hidden on larger screens -->
			<span class="block md:hidden self-center text-2xl font-thin whitespace-nowrap dark:text-white">
				JD FERGUSON</span>
		</a>

		<!-- right side of header -->
		<div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
			<!-- contact button -->
			<a href="/contact">
				<button type="button"
								class="text-white bg-primary-900 hover:bg-primary-950 font-medium rounded-lg text-sm px-4 py-2
								text-center">
					Contact
				</button>
			</a>
			<!-- veggie burger icon on small screens -->
			<button data-collapse-toggle="navbar-sticky" type="button"
							class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden
							hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400
							dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-sticky" aria-expanded="false">
				<span class="sr-only">Open main menu</span>
				<svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
					<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
								d="M1 1h15M1 7h15M1 13h15"/>
				</svg>
			</button>
		</div>

		<!-- menu items -->
		<div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-sticky">
			<ul	class="flex flex-col p-0 mt-4 font-medium text-right
				md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900">
				<li>
					<a href="/"
						 class="block py-2 px-3 text-base-900 rounded md:bg-transparent md:p-0 md:dark:text-base-100">Home</a>
				</li>
				<li>
					<a href="/bio"
						 class="block py-2 px-3 text-base-900 rounded md:bg-transparent md:p-0 md:dark:text-base-100">Bio</a>
				</li>
				<li>
					<a href="/portfolio"
						 class="block py-2 px-3 text-base-900 rounded md:bg-transparent md:p-0 md:dark:text-base-100">Portfolio</a>
				</li>
				<li>
					<a href="/process"
						 class="block py-2 px-3 text-base-900 rounded md:bg-transparent md:p-0 md:dark:text-base-100">Process</a>
				</li>
				<li>
					<a href="/ideas"
						 class="block py-2 px-3 text-base-900 rounded md:bg-transparent md:p-0 md:dark:text-base-100">Ideas</a>
				</li>
				<li>
					<a href="/gratitude"
						 class="block py-2 px-3 text-base-900 rounded md:bg-transparent md:p-0 md:dark:text-base-100">Gratitude</a>
				</li>
			</ul>
		</div>

	</div>
</nav>
